<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        >

        <ImageView
             android:layout_height="250dp"
             android:layout_width="200dp"
            android:id="@+id/imgacci"
            android:layout_marginTop="15dp"
            >

        </ImageView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Ly Chinh Thang, Quan 3, Ho Chi Minh"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Tình trạng"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                ></TextView>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngap lut, bao, tat duong, tai nan xe"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_access_time_24"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cap nhat:"
                    android:layout_marginTop="3dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:text="1h30m p.m"
                    android:id="@+id/time_update"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_location_on_24"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoang cach:"
                    android:layout_marginTop="3dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="20km"
                    android:layout_marginTop="3dp"
                    android:id="@+id/distance"
                    ></TextView>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


</FrameLayout>