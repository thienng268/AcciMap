<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="18dp"
        android:elevation="5dp"
        android:iconifiedByDefault="false"
        android:background="@color/colorWhite"
        android:queryHint="Tìm kiếm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></SearchView>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        class="com.example.accimap.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-40dp"></fragment>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newacci"
            android:layout_marginTop="660dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/outline_add_a_photo_24"
            android:padding="20dp"
            android:background="@drawable/ovalbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:radius="20dp"
            >
        </ImageButton>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/btm_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>