<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="335dp" android:layout_height="434dp" android:paddingTop="20dp" android:paddingLeft="20dp" android:paddingRight="20dp" android:gravity="center">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:fontFamily="@font/librefranklinblack" android:text="Đổi mật khẩu" android:textColor="@color/black" android:textStyle="bold" android:textSize="25dp" tools:ignore="MissingConstraints"/>
    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="4dp" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_passcode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:fontFamily="@font/librefranklinbold" android:text="Nhập mật khẩu cũ: " android:textSize="20dp" android:textColor="@color/black"/>
        <EditText android:id="@+id/edit_passcode" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="10dp" android:shadowColor="@color/darkbrown" android:inputType="numberPassword" android:textColor="@color/black" android:paddingLeft="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:fontFamily="@font/librefranklinbold" android:text="Nhập mật khẩu mới: " android:textSize="20dp" android:textColor="@color/black"/>
        <EditText android:id="@+id/edit_newpass" android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_height="35dp" android:textColor="@color/black" android:shadowColor="@color/darkbrown" android:inputType="numberPassword" android:paddingLeft="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:fontFamily="@font/librefranklinbold" android:text="Nhập lại mật khẩu mới: " android:textSize="20dp" android:textColor="@color/black"/>
        <EditText android:id="@+id/edit_confirmpass" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="10dp" android:inputType="numberPassword" android:paddingLeft="10dp" android:shadowColor="@color/darkbrown" android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="4dp" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cancel" android:layout_width="100dp" android:layout_height="38dp" android:fontFamily="@font/librefranklinmedium" android:text="Hủy" android:layout_marginTop="20dp" android:textAllCaps="false" android:textColor="@color/black" android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_ok" android:layout_width="100dp" android:layout_height="38dp" android:layout_marginLeft="92dp" android:fontFamily="@font/librefranklinmedium" android:text="Hoàn tất" android:layout_marginTop="20dp" android:textAllCaps="false" android:textColor="@color/black" android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>